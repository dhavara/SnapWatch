<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.snapwatch">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/timer_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/timer_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.SnapWatch">
        <activity android:name=".MemoEditActivity"></activity>
        <activity android:name=".MemoActivity" />
        <activity android:name=".AlarmActivity" />
        <activity android:name=".StopwatchActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity"></activity>
        <receiver android:name=".AlarmReceiver"
            android:process=":remote"/>

    </application>

</manifest>